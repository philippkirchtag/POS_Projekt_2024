<Window x:Class="Notes_WPF_POS_PROJEKT2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes_WPF_POS_PROJEKT2024"
        mc:Ignorable="d"
        Title="Notizen" Height="700" Width="700" Icon="/note_icon.jpg">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl_title" Content="Notizen" HorizontalAlignment="Left" Margin="328,43,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lb_Content" Grid.Row="1" Margin="100" MouseDoubleClick="NoteSelect"/>
        <Button x:Name="btn_addnote" Grid.Row="2" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
    </Grid>
</Window>
