<Window x:Class="Notes_WPF_POS_PROJEKT2024.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes_WPF_POS_PROJEKT2024"
        mc:Ignorable="d"
        Title="Notiz" Height="700" Width="700" Background="#FF2B2B2B">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="tb_title" FontWeight="Bold"  TextAlignment="Center" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF505050" Foreground="White" Width="264"/>
        <TextBox Grid.Row="1" Margin="50,50,50,50" x:Name="tb_content" Background="#FF505050" FontSize="14" Foreground="White"/>
        <Button x:Name="btn_save" Grid.Row="2" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FFE4E4E4" Height="40" Width="170" FontSize="14" FontWeight="Bold" Click="onSaveBtnClick"/>
    </Grid>
</Window>
